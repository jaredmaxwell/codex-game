# macOS Makefile
CXX = clang++
HOMEBREW_PREFIX = $(shell brew --prefix)
CXXFLAGS = -std=c++17 -I$(HOMEBREW_PREFIX)/include/SDL2 -I$(HOMEBREW_PREFIX)/include
SRC = src/main.cpp src/bitmap_font.cpp

# Default to static linking (recommended for distribution)
STATIC ?= 1

ifeq ($(STATIC), 1)
    # Static linking - embeds SDL2 into the executable
    LDFLAGS = -L$(HOMEBREW_PREFIX)/lib $(HOMEBREW_PREFIX)/lib/libSDL2.a $(HOMEBREW_PREFIX)/lib/libSDL2_image.a $(HOMEBREW_PREFIX)/lib/libpng.a $(HOMEBREW_PREFIX)/lib/libjpeg.a $(HOMEBREW_PREFIX)/lib/libtiff.a $(HOMEBREW_PREFIX)/lib/libwebp.a $(HOMEBREW_PREFIX)/lib/libavif.a $(HOMEBREW_PREFIX)/lib/libjxl.a -framework Cocoa -framework IOKit -framework CoreFoundation -framework CoreVideo -framework CoreAudio -framework AudioToolbox -framework CoreHaptics -framework GameController -framework CoreServices -framework Metal -framework Foundation -framework QuartzCore -framework ForceFeedback -framework Carbon -framework ImageIO -framework CoreGraphics -framework ApplicationServices -framework Security -framework SystemConfiguration -framework AppKit
    TARGET = game
    MESSAGE = "Building with static SDL2 linking (recommended for distribution)"
else
    # Dynamic linking - requires SDL2 to be installed
    LDFLAGS = -L$(HOMEBREW_PREFIX)/lib -lSDL2 -lSDL2_image -framework Cocoa
    TARGET = game
    MESSAGE = "Building with dynamic SDL2 linking (requires SDL2 to be installed)"
endif

all: $(TARGET)

$(TARGET): $(SRC)
	@echo $(MESSAGE)
ifeq ($(STATIC), 1)
	@echo "Checking for static SDL2 libraries..."
	@test -f $(HOMEBREW_PREFIX)/lib/libSDL2.a || (echo "Error: libSDL2.a not found. Install with: brew install sdl2" && exit 1)
	@test -f $(HOMEBREW_PREFIX)/lib/libSDL2_image.a || (echo "Error: libSDL2_image.a not found. Install with: brew install sdl2_image" && exit 1)
	@echo "Checking for static image format libraries..."
	@test -f $(HOMEBREW_PREFIX)/lib/libpng.a || (echo "Error: libpng.a not found. Install with: brew install libpng" && exit 1)
	@test -f $(HOMEBREW_PREFIX)/lib/libjpeg.a || (echo "Error: libjpeg.a not found. Install with: brew install libjpeg" && exit 1)
	@test -f $(HOMEBREW_PREFIX)/lib/libtiff.a || (echo "Error: libtiff.a not found. Install with: brew install libtiff" && exit 1)
	@test -f $(HOMEBREW_PREFIX)/lib/libwebp.a || (echo "Error: libwebp.a not found. Install with: brew install webp" && exit 1)
	@test -f $(HOMEBREW_PREFIX)/lib/libavif.a || (echo "Error: libavif.a not found. Install with: brew install libavif" && exit 1)
	@test -f $(HOMEBREW_PREFIX)/lib/libjxl.a || (echo "Error: libjxl.a not found. Install with: brew install libjxl" && exit 1)
	@echo "All static libraries found, linking..."
endif
	$(CXX) $(CXXFLAGS) -o $@ $(SRC) $(LDFLAGS)
	@echo "Build complete!"

static:
	@$(MAKE) STATIC=1

dynamic:
	@$(MAKE) STATIC=0

clean:
	rm -f game

.PHONY: all static dynamic clean
