# Linux Makefile
CXX = g++
CXXFLAGS = -std=c++17 $(shell pkg-config --cflags sdl2 SDL2_image)
LDFLAGS = $(shell pkg-config --libs sdl2 SDL2_image)
SRC = src/main.cpp src/bitmap_font.cpp src/game.cpp src/player.cpp src/enemy.cpp src/item.cpp src/menu_scene.cpp src/scene_manager.cpp src/settings.cpp src/tmx_loader.cpp src/camera.cpp

all: game

game: $(SRC)
	$(CXX) $(CXXFLAGS) -DSDL_MAIN_HANDLED -o $@ $(SRC) $(LDFLAGS)

clean:
	rm -f game

.PHONY: all clean
